{% comment %}
  Renders a product card

  Accepts:
  - card_product: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
  - image_shape: {String} Image mask to apply to the product image card. Values are "arch", "blob", "chevronleft", "chevronright", "diamond", "parallelogram", and "round". (optional)
  - show_secondary_image: {Boolean} Show the secondary image on hover. Default: false (optional)
  - show_vendor: {Boolean} Show the product vendor. Default: false
  - show_rating: {Boolean} Show the product rating. Default: false
  - extend_height: {Boolean} Card height extends to available container space. Default: true (optional)
  - lazy_load: {Boolean} Image should be lazy loaded. Default: true (optional)
  - show_quick_add: {Boolean} Show the quick add button.
  - section_id: {String} The ID of the section that contains this card.
  - horizontal_class: {Boolean} Add a card--horizontal class if set to true. Default: false (optional)
  - horizontal_quick_add: {Boolean} Changes the quick add button styles when set to true. Default: false (optional)
  - placeholder_image: {String} The placeholder image to use when no product exists. Default: 'product-apparel-2' (optional)

  Usage:
  {% render 'card-product', show_vendor: section.settings.show_vendor %}
{% endcomment %}

{% liquid
  assign image_ratio = media_aspect_ratio | default: 'portrait' 
%}

<card-product
  id="product-{{ section_id }}-{{ index }}"
  class="{{ class }}__item card-product {% if animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  data-cascade
  style="--animation-order: {{ index }};">
  <a
    href="{{ card_product.url }}"
    data-id="{{ card_product.id }}">
    <div
      class="{{ class }}__img-container card-product__img-container {{ image_ratio }}">
      {%- if image_ration == 'portrait' -%}
        <img
          srcset="{% if card_product.featured_image.width >= 288 %}
          {{ card_product.featured_image | image_url: width: 288 }} 288w,{% endif %}
        {% if card_product.featured_image.width >= 576 %}
          {{ card_product.featured_image | image_url: width: 576 }} 576w,{% endif %}
        {% if card_product.featured_image.width >= 550 %}
          {{ card_product.featured_image | image_url: width: 550 }} 550w,{% endif %}
        {% if card_product.featured_image.width >= 1100 %}
          {{ card_product.featured_image | image_url: width: 1100 }} 1100w,{% endif %}
        {{ card_product.featured_image | image_url }} {{ card_product.featured_image.width }}w"
        src="{{ card_product.featured_image | image_url: width: 715, height: 550 }}"
        loading="lazy"
        width="715"
        height="{{ 645 | divided_by: card_product.featured_image.aspect_ratio }}"
        alt="{{ card_product.featured_image.alt | escape }}"
        class="{{ class }}__img card-product__img">
      {%- else -%}
        <img
          srcset="{% if card_product.featured_image.width >= 288 %}
          {{ card_product.featured_image | image_url: width: 288 }} 288w,{% endif %}
        {% if card_product.featured_image.width >= 576 %}
          {{ card_product.featured_image | image_url: width: 576 }} 576w,{% endif %}
        {% if card_product.featured_image.width >= 550 %}
          {{ card_product.featured_image | image_url: width: 550 }} 550w,{% endif %}
        {% if card_product.featured_image.width >= 1100 %}
          {{ card_product.featured_image | image_url: width: 1100 }} 1100w,{% endif %}
        {{ card_product.featured_image | image_url }} {{ card_product.featured_image.width }}w"
        src="{{ card_product.featured_image | image_url: width: 1000, height: 801 }}"
        loading="lazy"
        width="1000"
        height="{{ 801 | divided_by: card_product.featured_image.aspect_ratio }}"
        alt="{{ card_product.featured_image.alt | escape }}"
        class="{{ class }}__img card-product__img">
      {%- endif -%}

    </div>
    {% comment %} {% render 'responsive-image' with image: card_product.featured_image, image_class: "{{ class }}__img card-product__img", wrapper_class: "{{ class }}__img-container card-product__img-container", max_width: 715, max_height: 550 %} {% endcomment %}
    <div
      class="{{ class }}__txt-container card-product__container">
      <div
        class="{{ class }}__txt-inner-container card-product__txt-inner-container">
        <div
          class="{{ class }}__product-title card-product__product-title">
          {{ card_product.title }}
        </div>
        <div
          class="{{ class }}__price-container card-product__price-container">
          {% render 'price', product: card_product, price_class: '' %}
        </div>
      </div>
    </div>
  </a>
</card-product>